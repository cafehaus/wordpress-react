// ====================================================================== 变量
$design-width = 1200px
$login-width = 892px
$base-color = #57BC78
$err-color = #F06E32
$red = #FF4C21
$blue = #1890ff
$green = #19be6b
$black = #161718
$dgray = #5B5C5D
$gray = #A2A2A3
$lgray = #ccc

$bgcolor = #f5f5f5
$box-shadow = 0 0 30px rgba(0, 0, 0, .15)
$assets = '@/assets'

// ====================================================================== 混合
iconfont(size = inherit color = inherit)
  font-family 'iconfont' !important
  font-size size
  font-style normal
  color color
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

// 表格条纹背景
stripe(even = #fff, odd = #eee)
  tr
    background-color odd
    &.even
    &:nth-child(even)
      background-color even

// 单行省略号
no-wrap()
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

// 多行省略号
multi-line-nowrap($col)
  display -webkit-box
  -webkit-box-orient vertical
  -webkit-line-clamp $col
  overflow hidden

// 三角
arrow(direction = top, n = 6px, color = currentColor)
  display inline-block
  border n solid transparent
  width 0
  height 0
  line-height 0
  vertical-align middle
  {'border-' + direction + '-color'} color

// 占位符字体颜色
placeholder(color = $gray)
  &::-moz-placeholder
    color color
  &:-ms-input-placeholder
    color color
  &::-webkit-input-placeholder
    color color

// flex 水平均匀分布
flexLeftRight()
  display flex
  justify-content space-between

// flex 垂直方向排列
flexVertical()
  display flex
  flex-direction column

// flex 水平垂直居中
flexCenterMiddle()
  display flex
  justify-content center
  align-items center

// 美化滚动条
scrollbar(color = #E9E9E9)
  &::-webkit-scrollbar
    height 10px
    width 10px
    background #FAFAFA
  &::-webkit-scrollbar-thumb
    background color
    border-radius 5px

// 清除浮动
clearfix()
  zoom 1 if support-for-ie
  &:before
  &:after
    content ''
    display table
  &:after
    clear both

// overflow 增加 ellipsis 属性值
overflow()
  if arguments[0] == ellipsis
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
  else
    overflow arguments
